<Window x:Class="ITKarieraAnketi.UIWindows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITKarieraAnketi.UIWindows"
        mc:Ignorable="d"
        Title="InputDialog" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="30" Grid.Row="1" Margin="0,10,0,0"/>
        <Label x:Name="lblQuestion" Grid.Row="0"/>
        <TextBox x:Name="txtResponse" Grid.Row="1" Width="200" Height="30" Margin="290,63,290,10"/>
        <Button Content="OK" Grid.Row="2" Click="btnDialogOk_Click" Margin="305,33,305,43"/>
    </Grid>
</Window>
