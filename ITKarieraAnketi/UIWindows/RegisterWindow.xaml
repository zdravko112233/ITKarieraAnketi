<Window x:Class="ITKarieraAnketi.UIWindows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITKarieraAnketi.View.UserControls"
        mc:Ignorable="d"
        Title="Register Window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Text="Register"/>
        <local:ClearableTextbox x:Name="textRegisterName" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" TBplaceholder="Name" Width="250"/>
        <local:ClearableTextbox x:Name="textRegisterPassword" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" TBplaceholder="Password" Width="250"/>
        <Button Name="buttonCreateAccount" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Create Account" Click="buttonCreateAccount_Click" FontSize="20" Width="250" Height="50"></Button>
    </Grid>
</Window>
